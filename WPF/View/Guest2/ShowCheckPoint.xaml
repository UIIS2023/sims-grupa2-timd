<Window x:Class="SimsProject.WPF.View.Guest2.ShowCheckPoint"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimsProject.WPF.View.Guest2"
        mc:Ignorable="d"
        Title="ShowCheckPoint" Height="450" Width="800">
    <Grid Margin="10,0,0,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition  Width="300"   />
            <ColumnDefinition  Width="*"  />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition    />
            <RowDefinition    />
        </Grid.RowDefinitions>
        <Image Source="pack://application:,,,/Resources/Images/checkpoint.png" Grid.Column="1" Grid.RowSpan="2"/>
        <Label FontSize="20" FontWeight="Bold"  Grid.Row="0" Margin="268,10,268,153" Grid.ColumnSpan="2" >Your current Location :</Label>
        <TextBlock Text="{Binding CheckPointName}" Margin="0,142,0,32" FontWeight="Bold" FontSize="20" HorizontalAlignment="Right" Grid.Row="1" Width="93" />
    </Grid>
</Window>
